
@{
    ViewData["Title"] = "Index";
}
@model List<Student>

<div class="row justify-content-end">
  <div class="col-4 d-flex justify-content-end">
        @Html.ActionLink("Add", "Create", "Students",null, new { @class = "btn btn-primary" })
  </div>
</div>
<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">EnrollmentDate</th>
                <th scope="col">Operation</th>
            </tr>
        </thead>
        <tbody>

            @if (ViewBag.HasData)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.EnrollmentDate</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Students" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="far fa-pen-to-square"></i>

                            </a>
                            <a class="btn btn-danger" asp-controller="Students" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="fas fa-trash-can"></i>
                            </a>
                        </td>


                    </tr>
                }
                <h3>
                    @TempData["Success"]
                </h3>
            }
            
            else
            {
                <h1>
                   @ViewBag.Message
           
                </h1>
                <h2>
                    @ViewData["Message"]
                </h2>
             
            }

         

        </tbody>
    </table>
</div>


